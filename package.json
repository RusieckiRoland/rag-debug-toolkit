{
  "name": "rag-debug-toolkit",
  "displayName": "RAG Debug Toolkit",
  "description": "A simple VS Code extension for debugging RAG pipelines.",
  "version": "0.0.15",
  "publisher": "local",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RusieckiRoland/rag-debug-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/RusieckiRoland/rag-debug-toolkit/issues"
  },
  "homepage": "https://github.com/RusieckiRoland/rag-debug-toolkit#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:markdown",
    "onView:renderedPromptViewer.traceExplorerView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "renderedPromptViewer.open",
        "title": "Open rendered_prompt"
      },
      {
        "command": "renderedPromptViewer.showDelta",
        "title": "Rendered Prompt Viewer: Show Trace (Delta)"
      },
      {
        "command": "renderedPromptViewer.showStepInfo",
        "title": "Rendered Prompt Viewer: Show Trace (Step info only)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.refresh",
        "title": "Rendered Prompt Viewer: Trace Explorer (Refresh)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.openStepDelta",
        "title": "Rendered Prompt Viewer: Trace Explorer (Open step delta)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.openLastTrace",
        "title": "Rendered Prompt Viewer: Trace Explorer (Open last trace)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.openPumlDiagram",
        "title": "Rendered Prompt Viewer: Trace Explorer (Open PUML diagram)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.openCallModelMessages",
        "title": "Rendered Prompt Viewer: Trace Explorer (Open messages as MD)"
      },
      {
        "command": "renderedPromptViewer.traceExplorer.copyCallModelPayload",
        "title": "Rendered Prompt Viewer: Trace Explorer (Copy messages + response)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "renderedPromptViewer.traceExplorerView",
          "name": "Trace Explorer"
        }
      ]
    },
    "configuration": {
      "title": "RAG Debug Toolkit",
      "properties": {
        "renderedPromptViewer.pumlBaseUrl": {
          "type": "string",
          "default": "https://www.planttext.com",
          "description": "Base URL for rendering generated PUML diagrams. The extension appends query parameter 'text=<encoded-diagram>'."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "vscode:prepublish": "npm run compile",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.9.3"
  }
}
